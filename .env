# ================================================================
# CONFIGURATION ENVIRONNEMENT LOCAL - TCHADOK PLATFORM
# ================================================================
# ATTENTION: Ce fichier contient des informations sensibles.
# Ne JAMAIS commiter ce fichier dans Git en production !
# ================================================================

# Environnement
APP_ENV=development
APP_DEBUG=true
APP_NAME="Tchadok Platform"

# URL de base (sans slash à la fin)
# Pour XAMPP/WAMP en local avec sous-dossier
APP_URL=http://localhost/tchadok
SITE_URL=http://localhost/tchadok

# Configuration de la base de données (Local)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tchadok
DB_USERNAME=dansia
DB_PASSWORD=dansia
DB_CHARSET=utf8mb4

# Clés de sécurité
# Générer avec: openssl rand -base64 32
APP_KEY=base64:your-local-app-key-here-change-in-production
SESSION_SECRET=your-local-session-secret-here

# Configuration des sessions
SESSION_LIFETIME=120
SESSION_DRIVER=file

# Configuration du mail (Local - Mailtrap ou similaire)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tchadok.td
MAIL_FROM_NAME="Tchadok Platform"

# Configuration du stockage
STORAGE_DRIVER=local
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp3,mp4,wav,pdf

# Chemins de stockage
UPLOAD_PATH=/uploads
MUSIC_PATH=/uploads/music
IMAGE_PATH=/uploads/images
PROFILE_PATH=/uploads/profiles

# Configuration des paiements (Mode test)
PAYMENT_MODE=test
AIRTEL_MONEY_API_KEY=test-airtel-key
MOOV_MONEY_API_KEY=test-moov-key

# Configuration du cache
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Configuration des logs
LOG_LEVEL=debug
LOG_CHANNEL=file

# Activation des fonctionnalités de développement
ENABLE_TEST_ACCOUNTS=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_QUERY_LOG=true

# Réseaux sociaux (Local - Callbacks vers localhost)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URL=http://localhost/tchadok/auth/facebook/callback

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost/tchadok/auth/google/callback

# Configuration de la plateforme
PLATFORM_NAME="Tchadok"
PLATFORM_SLOGAN="La musique tchadienne à portée de clic"
PLATFORM_EMAIL=contact@tchadok.td
PLATFORM_PHONE="+235 XX XX XX XX"

# Commission des artistes (en pourcentage)
ARTIST_COMMISSION_RATE=15

# Limites de la plateforme
MAX_UPLOAD_SIZE=10
MAX_PLAYLIST_ITEMS=100
MAX_FAVORITES=500
FREE_DOWNLOAD_LIMIT=5
PREMIUM_DOWNLOAD_LIMIT=unlimited

# Timezone
APP_TIMEZONE=Africa/Ndjamena
