# ================================================================
# .htaccess pour environnement LOCAL - Tchadok Platform
# ================================================================
# Configuration Apache pour XAMPP/WAMP avec sous-dossier
# ================================================================

# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Définir la base de réécriture pour le sous-dossier
    RewriteBase /tchadok/

    # Rediriger toutes les requêtes vers HTTPS (DÉSACTIVÉ en local)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Empêcher l'accès direct aux fichiers sensibles
    RewriteRule ^\.env$ - [F,L]
    RewriteRule ^\.env\.production$ - [F,L]
    RewriteRule ^composer\.(json|lock)$ - [F,L]
    RewriteRule ^package(-lock)?\.json$ - [F,L]

    # Rediriger les requêtes sans extension vers PHP
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L,QSA]
</IfModule>

# Protection des fichiers sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|htaccess|htpasswd|ini|log|sh|sql|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Autoriser l'accès aux fichiers .well-known (pour certifications SSL, etc.)
<IfModule mod_rewrite.c>
    RewriteRule ^\.well-known/ - [L]
</IfModule>

# Configuration PHP pour l'environnement local
<IfModule mod_php7.c>
    # Affichage des erreurs en développement
    php_flag display_errors On
    php_flag display_startup_errors On
    php_value error_reporting E_ALL

    # Taille maximale des uploads
    php_value upload_max_filesize 50M
    php_value post_max_size 52M
    php_value memory_limit 256M
    php_value max_execution_time 300
    php_value max_input_time 300

    # Sessions
    php_value session.gc_maxlifetime 7200
    php_flag session.cookie_httponly On

    # Timezone
    php_value date.timezone "Africa/Ndjamena"
</IfModule>

# Configuration pour PHP 8
<IfModule mod_php.c>
    php_flag display_errors On
    php_flag display_startup_errors On
    php_value error_reporting E_ALL
    php_value upload_max_filesize 50M
    php_value post_max_size 52M
    php_value memory_limit 256M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value session.gc_maxlifetime 7200
    php_flag session.cookie_httponly On
    php_value date.timezone "Africa/Ndjamena"
</IfModule>

# Compression des fichiers
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache des fichiers statiques (modéré en développement)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 day"
    ExpiresByType image/jpeg "access plus 1 day"
    ExpiresByType image/gif "access plus 1 day"
    ExpiresByType image/png "access plus 1 day"
    ExpiresByType image/svg+xml "access plus 1 day"
    ExpiresByType text/css "access plus 1 hour"
    ExpiresByType text/javascript "access plus 1 hour"
    ExpiresByType application/javascript "access plus 1 hour"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType audio/mpeg "access plus 1 week"
    ExpiresByType video/mp4 "access plus 1 week"
</IfModule>

# Configuration CORS (permissive en local)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

    # Désactiver X-Frame-Options pour permettre l'iframe en dev
    # Header set X-Frame-Options "SAMEORIGIN"

    # Sécurité XSS
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"

    # Référer policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Page d'erreur personnalisée
ErrorDocument 404 /tchadok/404.php
ErrorDocument 403 /tchadok/403.php
ErrorDocument 500 /tchadok/500.php

# Options du répertoire
Options -Indexes
Options +FollowSymLinks

# Encodage par défaut
AddDefaultCharset UTF-8

# Types MIME pour les fichiers audio
<IfModule mod_mime.c>
    AddType audio/mpeg mp3
    AddType audio/mp4 m4a
    AddType audio/ogg ogg
    AddType audio/wav wav
    AddType video/mp4 mp4
    AddType application/json json
    AddType application/font-woff2 woff2
    AddType image/svg+xml svg svgz
</IfModule>

