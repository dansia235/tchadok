# ================================================================
# .gitignore - Tchadok Platform
# ================================================================

# Environnement et configuration sensible
.env
.env.local
.env.*.local
config.local.php

# NE PAS ignorer les templates d'environnement
!.env.production
!.htaccess.production

# Logs
*.log
logs/
storage/logs/

# Cache et fichiers temporaires
cache/
tmp/
temp/
*.tmp
*.cache
*.swp
*.swo
*~

# Uploads et médias utilisateurs
uploads/*
!uploads/.gitkeep
storage/app/*
!storage/app/.gitkeep

# Vendor et dépendances
vendor/
node_modules/
bower_components/

# Composer
composer.lock
composer.phar

# NPM
package-lock.json
npm-debug.log
yarn-error.log

# IDE et éditeurs
.idea/
.vscode/
.vs/
*.sublime-project
*.sublime-workspace
.DS_Store
Thumbs.db

# Système
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Desktop.ini
$RECYCLE.BIN/

# Backups
*.bak
*.backup
*.sql
*.sql.gz
backup/
backups/

# Fichiers de session
storage/sessions/
sessions/

# Documentation compilée
docs/_build/
site/

# Tests et coverage
phpunit.xml
.phpunit.result.cache
coverage/
.coverage
htmlcov/

# Certificats SSL
*.pem
*.key
*.crt
*.csr

# Variables spécifiques au développeur
.env.developer
local.config.php
